<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>


  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% order = @order.line_items
        order.each do |item| 
          product = item.product %>
          <%= render 'line_item', quantity: item.quantity.to_i, total_price_cents: item.total_price_cents,
          image: product.image, name: product.name, description: product.description %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
          </th>
        </tr>
        <td>
        EMAIL
        </td>
        <td>
        <%= @order.email %>
        </td>
        <tr>
        </tr>
      </tfoot>
    </table>
  </div>


  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
